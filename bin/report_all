include_once(dirname(__DIR__).'/library/Autoload.php');
spl_autoload_register('Autoload::autoload_library');

$config = Config::factory($argv);

$project = $config->project;

$reports = array('Premier');
$formats = array('markdown', 'sqlite', 'ace', 'html', 'text', /* 'pdf', 'odt' */);

print shell_exec('rm -rf ./projects/'.$project.'/report; rm -rf ./projects/'.$project.'/report.zip;  php bin/report -p '.$project.' -f ./projects/'.$project.'/report -format ace -report Premier 2>&1 > ./projects/'.$project.'/log/report.premier.log');
print shell_exec('rm -rf ./projects/'.$project.'/counts.sqlite;  php bin/report -p '.$project.' -f ./projects/'.$project.'/counts -format sqlite -report Counts 2>&1 > ./projects/'.$project.'/log/report.counts.log');
